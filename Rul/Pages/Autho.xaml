<Page x:Class="Rul.Pages.Autho"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Rul.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Autho">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="336">
            <TextBlock Text="Логин"/>
            <TextBox Name="txtLogin"/>
            <TextBlock Text="Пароль"/>
            <TextBox Name="txtPassword"/>
            <TextBlock Name="textBlockCaptcha"/>
            <TextBox Name="txtCaptcha"/>
            <StackPanel Orientation="Horizontal" Height="80" HorizontalAlignment="Center">
                <Button x:Name="btnCeterGuest" Content="Войти как гость" Click="btnCeterGuest_Click" Background="#FF529444" />
                <Button x:Name="btnCeter" Content="Войти" Click="btnCeter_Click" Background="#FF529444"  />
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Page>
